---
const { color, title, subtitle, id, showFooterContent
  ,titleCard1, boldCard1, detailCard1, displayCard1
  ,titleCard2, boldCard2, detailCard2, displayCard2
  ,titleCard3, boldCard3, detailCard3, displayCard3
} = Astro.props;
const textColor = `text-${color}`;
import FooterMenu from './FooterMenu.astro';
---


<section
  class="landing-section bg-black h-screen w-auto text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
<div class="z-30 relative h-full pt-14 md:pt-3 xl:pt-20 flex flex-col  bg-green-800/20">
  <!-- Hero -->
    <header class="w-auto px-3 py-1 mx-auto rounded-lg bg-slate-800/50 mb-0 md:mb-20">
      <h2 class={`${textColor} pt-0 text-2xl md:text-2xl `}>
        {title}
      </h2>
      <p class={`${textColor} text-sm `}>
        {subtitle}
      </p>
    </header>
    
    <div class="z-10">
      <slot name="before" />
    </div>

    <footer class="flex flex-col flex-grow justify-end pb-20 z-30">
      <section class={`${textColor}   w-full xl:w-2/3 mx-auto flex flex-col md:flex-row  mb-2 `}>
        <!-- Card 1 -->
        <div class={`${displayCard1} mx-2 md:mx-4 lg:mx-6 w-12/12 md:w-4/12 bg-slate-800/50 rounded-lg `} >
          <h3 class="font-bold pt-3 text-[1.2rem]">
            {titleCard1}
          </h3>
          <p class={`${textColor} text-[0.7rem] md:text-[0.8rem]  mt-2  text-justify px-1 md:px-2`}>
            <!-- {subtitle} -->
            <strong> {boldCard1} </strong> {detailCard1}
          </p>        
        </div>
        <!-- Card 2 -->
        <div class={`${displayCard2} mx-2 md:mx-4 lg:mx-6 w-12/12 md:w-4/12 bg-slate-800/50 rounded-lg `} >
          <h3 class="font-bold pt-3 text-[1.2rem]">
            {titleCard2}
          </h3>
          <p class={`${textColor} text-[0.7rem] md:text-[0.8rem]  mt-2  text-justify px-1 md:px-2`}>
            <!-- {subtitle} -->
            <strong> {boldCard2} </strong> {detailCard2}
          </p>        
        </div>
        <!-- Card 3 -->
        <div class={`${displayCard3} mx-2 md:mx-4 lg:mx-6 w-12/12 md:w-4/12 bg-slate-800/50 rounded-lg `} >
          <h3 class="font-bold pt-3 text-[1.2rem]">
            {titleCard3}
          </h3>
          <p class={`${textColor} text-[0.7rem] md:text-[0.8rem]  mt-2  text-justify px-1 md:px-2`}>
            <!-- {subtitle} -->
            <strong> {boldCard3} </strong> {detailCard3}
          </p>        
        </div>



        <div class="z-10">
          <slot name="after" />
          <a href="https://api.whatsapp.com/send/?phone=56978892439&text=Hola%20busco%20informaciÃ³n%20respecto%20de%20casas%20modulares" 
      
      class="  rounded-xl
      font-medium text-white  inline-block hover:bg-slate-200 hover:text-black 
      transition-colors mb-8 fixed bottom-0 right-4 sm:bottom-0 sm:right-4 md:bottom-20 md:right-1/4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-brand-whatsapp h-12 w-12 text-green-500 dark:text-green-500"
        width="40"
        height="40"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"
        ></path>
        <path
          d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
        ></path>
      </svg>
      </a>
        </div>
        
      </section>
      
<slot name="whatsapp" />

      <slot name="footer" />
      <!-- Contidionally load footer: -->
      {showFooterContent && <FooterMenu />}
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <slot name="background" />
  </div>
</section>
